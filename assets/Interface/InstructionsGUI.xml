          <panel id="top" width="100%" height="25%" childLayout="vertical">
            <text id="txt1" font="assets/Interface/Fonts/Arial32px.fnt" width="97%" text="Du är nu klar med testet" wrap="true" color="#000f" textHAlign="center" textVAlign="top"/>  
