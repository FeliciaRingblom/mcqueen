<?xml version="1.0" encoding="UTF-8"?>

<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <!-- load default styles and controls -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->
  <useStyles filename="nifty-default-styles.xml" />
  <useStyles filename="Interface/Styles/style.xml" />
  <useControls filename="nifty-default-controls.xml" />
  <style id="console-red" base="button-font">
    <attributes font="fonts/menu.fnt" color="#f00f"/>
  </style>
  <style id="console-white" base="button-font">
    <attributes font="fonts/menu.fnt" color="#ffff"/>
  </style>
  <style id="console-font">
    <attributes font="fonts/verdana-48-regular.fnt" color="#00ff"/>
  </style>
  <resourceBundle id="intro" filename="assets/Interface/intro" />

  <!-- Start screen with -->
  <screen id="start" controller="eu.opends.niftyGui.StartScreenGUIController" >
    <layer id="backLayer" childLayout="vertical" >
      <panel id="wrapper" width="100%" height="100%" childLayout="vertical" backgroundColor="#efefef">    
        <panel id="top" width="100%" height="25%" childLayout="vertical">
          <text id="txt1" font="assets/Interface/Fonts/Arial32px.fnt" text="Testa din simultanförmåga" wrap="true" color="#000f" textHAlign="center" textVAlign="center"/> 
        </panel><!-- ./top -->
        
        <panel id="center" childLayout="absolute-inside" backgroundImage="assets/Interface/images_instruction_screen/bg_img_start.png" width="100%" y="25%" height="50%">
          <image id="start_test_img_btn" filename="assets/Interface/images_instruction_screen/trans_box.png" width="45%" height="100%"/>
          <panel id="input_labels" width="20%" height="90%" childLayout="absolute-inside" x="0%">
              <text id="label_id_nr" text="Löpnr:" font="assets/Interface/Fonts/Arial32px.fnt" width="90%" height="15%" y="12%" wrap="true" color="#000f" borderColor="#bbb" textHAlign="right" textVAlign="center"/>
              <text id="label_diagnosis_nr" text="Diagnosnr:" font="assets/Interface/Fonts/Arial32px.fnt" width="90%" height="15%" y="32%" wrap="true" color="#000f" borderColor="#bbb" textHAlign="right" textVAlign="center"/>
              <text id="label_age" text="Ålder:" font="assets/Interface/Fonts/Arial32px.fnt" width="90%" height="15%" y="52%" wrap="true" color="#000f" borderColor="#bbb" textHAlign="right" textVAlign="center"/>
          </panel>
          <panel id="input_fields" width="20%" height="90%" childLayout="absolute-inside" x="20%">
              <control id="input_id" name="textfield" width="90%" height="15%" y="10%" color="#ffffff" borderColor="#bbb"/>
              <control id="input_diagnosis_nr" name="textfield" width="90%" height="15%" y="30%" color="#ff0000" borderColor="#bbb"/>
              <control id="input_age" name="textfield" width="90%" height="15%" y="50%" color="#ffffff" borderColor="#bbb"/>
          </panel>  
          <panel id="radio_buttons" width="40%" height="25%" childLayout="vertical" y="70%" x="4%">
         
            <control id="RadioGroup-gender" name="radioButtonGroup"/>          
            <panel width="40%" childLayout="horizontal" x="40%" height="50%">
              <panel childLayout="horizontal">
                <control name="label" text="man" with="60px" color="#000f"/>
                <control name="radioButton" id="option-male" group="RadioGroup-gender" />
              </panel>
              <panel childLayout="horizontal">
                <control name="label" text="kvinna" with="60px" color="#000f"/>
                <control name="radioButton" id="option-female" group="RadioGroup-gender" />
              </panel>
            </panel>          
            <control id="RadioGroup-speed" name="radioButtonGroup"/>          
            <panel width="40%" childLayout="horizontal" x="90%">
              <panel childLayout="horizontal" x="0%">
                <control name="label" text="40km/h" with="60px" color="#000f"/>
                <control name="radioButton" id="low" group="RadioGroup-speed" />
              </panel>
              <panel childLayout="horizontal" x="40%">
                <control name="label" text="50km/h" with="60px" color="#000f"/>
                <control name="radioButton" id="middle" group="RadioGroup-speed" />
              </panel>    

  
            </panel>            
          
          </panel>
        </panel><!-- ./center -->
        
        <panel id="bottom" width="100%" y="75%" height="25%" childLayout="absolute-inside">                   
          <image id="start_test_img_btn" filename="assets/Interface/images_instruction_screen/large_start_button.png" width="90%" height="35%" align="center" y="15%" x="5%">
            <effect>
              <onHover name="border" border="3px" color="#ffba00" timeType="infinite"/>
            </effect>
            <interact onClick="startTest()" />
          </image>
          <image id="start_straight" filename="assets/Interface/images_instruction_screen/small_start_button1.png" width="25%" height="25%" align="center" y="65%" x="5%">
            <effect>
              <onHover name="border" border="2px" color="#ffba00" timeType="infinite"/>
            </effect>
            <interact onClick="startIntroStraight()" />
          </image>
          <image id="start_stimuli" filename="assets/Interface/images_instruction_screen/small_start_button2.png" width="26%" height="25%" align="center" y="65%" x="37%">
            <effect>
              <onHover name="border" border="2px" color="#ffba00" timeType="infinite"/>
            </effect>
            <interact onClick="startIntroStimuli()" />
          </image>
          <image id="start_main" filename="assets/Interface/images_instruction_screen/small_start_button3.png" width="25%" height="25%" align="center" y="65%" x="70%">
            <effect>
              <onHover name="border" border="2px" color="#ffba00" timeType="infinite"/>
            </effect>
            <interact onClick="startMainTest()" />
          </image>
        </panel><!-- ./botttom -->

      </panel><!-- ./wrapper -->
    </layer>
  </screen>

</nifty>