<?xml version="1.0" encoding="UTF-8"?>
<interaction xmlns="http://opends.eu/drivingtask/interaction"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://opends.eu/drivingtask/interaction ../../Schema/interaction.xsd">


  <activities>
      <activity id="ReturnToInstructions" ref="">
    <action delay="6.0" id="returnToInstruction" repeat="1">
        <parameter name="next" value="3"/>
    </action>
  </activity>
    <activity id="activity03">
      <action id="pauseSimulation" delay="0" repeat="4">
        <parameter name="duration" value="3" />
      </action>
    </activity>
    <activity id="activity06">
      <action id="playSound" delay="0" repeat="4">
        <parameter name="soundID" value="beep" />
      </action>
    </activity>
    <activity id="End_pauseSimulation" ref="">
      <action delay="5.0" id="pauseSimulation" repeat="4">
        <parameter name="duration" value="0"/>
      </action>
    </activity>

    <activity id="showStimuli1" ref="">
      <action delay="0.0" id="manipulatePicture" repeat="4">  
        <parameter name="id" value="rightGreenSquare" /> 
        <parameter name="visible" value="true"/>     
      </action>  
    </activity>
    <activity id="showStimuli2" ref="">
      <action delay="0.0" id="manipulatePicture" repeat="4">  
        <parameter name="id" value="leftGreenCircle" /> 
        <parameter name="visible" value="true"/>     
      </action>
    </activity>
    <activity id="showStimuli3" ref="">
      <action delay="0.0" id="manipulatePicture" repeat="4">  
        <parameter name="id" value="leftRedSquare" /> 
        <parameter name="visible" value="true"/>     
      </action>
    </activity>
    <activity id="hideStimuli" ref="">
      <action delay="0.0" id="manipulatePicture" repeat="4">  
        <parameter name="id" value="leftRedSquare" /> 
        <parameter name="visible" value="false"/>     
      </action>
    </activity>
  </activities>

  <triggers>

    <trigger id="Finish_Trigger" priority="1">
      <activities>
        <activity ref="End_pauseSimulation"/>
        <activity ref="ReturnToInstructions"/>
      </activities>
      <condition>collideWith:Finish_Trigger</condition>
    </trigger>
  
    <trigger id="Stimuli_Trigger1" priority="1">
      <activities>
        <activity ref="showStimuli1"/>
      </activities>
      <condition>collideWith:Stimuli_Trigger1</condition>
    </trigger>
     <trigger id="Stimuli_Trigger2" priority="1">
        <activities>
            <activity ref="showStimuli2"/>
        </activities>
        <condition>collideWith:Stimuli_Trigger2</condition>
    </trigger>
        <trigger id="Stimuli_Trigger3" priority="1">
      <activities>
          <activity ref="showStimuli3"/>
        </activities>
        <condition>collideWith:Stimuli_Trigger3</condition>
    </trigger>
     <trigger id="Stimuli_Trigger4" priority="1">
        <activities>
            <activity ref="hideStimuli"/>
        </activities>
        <condition>collideWith:Stimuli_Trigger4</condition>
    </trigger>
  </triggers>
  
</interaction>