<?xml version="1.0" encoding="UTF-8"?>
<interaction xmlns="http://opends.eu/drivingtask/interaction"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://opends.eu/drivingtask/interaction ../../Schema/interaction.xsd">


	<activities>
		<activity id="activity01">
			<action id="manipulateObject" delay="0" repeat="4">
				<parameter name="id" value="RoadworksSign1" />
				<parameter name="translationX" value="-81" />
				<parameter name="translationY" value="-1.693" />
				<parameter name="translationZ" value="-48" />
				<parameter name="rotationX" value="0" />
				<parameter name="rotationY" value="135" />
				<parameter name="rotationZ" value="0" />
				<parameter name="scaleX" value="0.02" />
				<parameter name="scaleY" value="0.02" />
				<parameter name="scaleZ" value="0.02" />
				<parameter name="visible" value="true" />
			</action>
		</activity>
		<activity id="activity02">
			<action id="sendMessage" delay="0" repeat="4">
				<parameter name="text" value="Rafael" />
				<parameter name="duration" value="3" />
			</action>
		</activity>
		<activity id="activity03">
			<action id="pauseSimulation" delay="0" repeat="4">
				<parameter name="duration" value="3" />
			</action>
		</activity>
    <activity id="Start_startRM" ref="">
            <action delay="0.0" id="startReactionMeasurement" repeat="1"/>
      </activity>

		<activity id="activity04">
			<action id="startRecording" delay="0" repeat="4">
				<parameter name="track" value="1" />
			</action>
		</activity>
		<activity id="activity05">
			<action id="stopRecording" delay="0" repeat="4">
			</action>
		</activity>
		<activity id="activity06">
			<action id="playSound" delay="0" repeat="4">
				<parameter name="soundID" value="beep" />
			</action>
		</activity>
		    <activity id="End_pauseSimulation" ref="">
                  <action delay="0.0" id="pauseSimulation" repeat="4">
                        <parameter name="duration" value="0"/>
                  </action>
            </activity>

        <activity id="showStimuliGreenCircleR" ref="">
      	  <action id="setupKeyReactionTimer">
           	<parameter name="reactionGroup" value="1"/>
             <parameter name="timerID" value="timer1"/>
           	<parameter name="correctReaction" value="KEY_N"/>
           	<parameter name="failureReaction" value="KEY_B"/>
           </action>
          <action delay="0.0" id="manipulatePicture" repeat="4">  
          	<parameter name="id" value="rightGreenSquare" /> 
          	<parameter name="visible" value="true"/>     
          </action>  
        </activity>
        <activity id="showStimuliGreenCircleL" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="leftGreenCircle" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
        <activity id="showStimuliGreenSquareR" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="rightGreenSquare" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
        <activity id="showStimuliGreenSquareL" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="leftGreenSquare" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
        <activity id="showStimuliRedCircleL" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="leftRedCircle" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
        <activity id="hideStimuliCircleL" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="leftRedCircle" /> 
            <parameter name="visible" value="false"/>     
          </action>
        </activity>
        <activity id="showStimuliRedCircleR" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="rightRedCircle" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
          <activity id="hideStimuliCircleR" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="rightRedCircle" /> 
            <parameter name="visible" value="false"/>     
          </action>
        </activity>
        <activity id="showStimuliRedSquareL" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="leftRedSquare" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
        <activity id="hideStimuliSquareL" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="leftRedSquare" /> 
            <parameter name="visible" value="false"/>     
          </action>
        </activity>
        <activity id="showStimuliRedSquareR" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="rightRedSquare" /> 
            <parameter name="visible" value="true"/>     
          </action>
        </activity>
          <activity id="hideStimuliSquareR" ref="">
          <action delay="0.0" id="manipulatePicture" repeat="4">  
            <parameter name="id" value="rightRedSquare" /> 
            <parameter name="visible" value="false"/>     
          </action>
        </activity>
	</activities>
	
	<triggers>
		<trigger id="Finish_Trigger" priority="1">
      <activities>
        <activity ref="End_pauseSimulation"/>
      </activities>
      <condition>collideWith:Finish_Trigger</condition>
    </trigger>
      
    <trigger id="Stimuli_Trigger1" priority="1">
      <activities>
      	<activity id="Start_startRM" ref="">
          <action delay="0.0" id="startReactionMeasurement" repeat="1"/>
      </activity>
      <activity ref="showStimuliGreenCircleR"/>
      </activities>
      <condition>collideWith:Stimuli_Trigger1</condition>
    </trigger>
     <trigger id="Stimuli_Trigger2" priority="1">
        <activities>
          <activity ref="showStimuliGreenSquareL"/>
        </activities>
        <condition>collideWith:Stimuli_Trigger2</condition>
    </trigger>
     <trigger id="Stimuli_Trigger3" priority="1">
        <activities>
            <activity ref="showStimuliRedCircleL"/>
        </activities>
        <condition>collideWith:Stimuli_Trigger3</condition>
    </trigger>
     <trigger id="Stimuli_Trigger4" priority="1">
        <activities>
            <activity ref="hideStimuliCircleL"/>
        </activities>
        <condition>collideWith:Stimuli_Trigger4</condition>
    </trigger>
      <trigger id="Stimuli_Trigger5" priority="1">
